<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>ncETL</display-name>
    <description>ncETL</description>
    <servlet>
        <servlet-name>IngestControlServlet</servlet-name>
        <servlet-class>gov.usgs.cida.dcpt.IngestControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DecorateServlet</servlet-name>
        <servlet-class>gov.usgs.cida.dcpt.servlet.DecorateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateRubricServlet</servlet-name>
        <servlet-class>gov.usgs.cida.dcpt.servlet.GenerateRubricServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatasetServlet</servlet-name>
        <servlet-class>gov.usgs.cida.dcpt.servlet.DatasetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DateIndexerServlet</servlet-name>
        <servlet-class>gov.usgs.cida.dcpt.servlet.DateIndexer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DerbyServlet</servlet-name>
        <servlet-class>gov.usgs.cida.dcpt.servlet.DerbyServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>IngestControlService</servlet-name>
        <servlet-class>gov.usgs.cida.dcpt.service.IngestControlService</servlet-class>
        <init-param>
            <param-name>jndi_name</param-name>
            <param-value>java:comp/env/jdbc/NCETL</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>IngestControlServlet</servlet-name>
        <url-pattern>/ingestors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DecorateServlet</servlet-name>
        <url-pattern>/decorate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateRubricServlet</servlet-name>
        <url-pattern>/nciso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatasetServlet</servlet-name>
        <url-pattern>/datasets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DateIndexerServlet</servlet-name>
        <url-pattern>/dates</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DerbyServlet</servlet-name>
        <url-pattern>/DerbyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngestControlService</servlet-name>
        <url-pattern>/service/ingest/*</url-pattern>
    </servlet-mapping>
</web-app>
